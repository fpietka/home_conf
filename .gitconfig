[user]
    name = <Ghislain Rodrigues>
    email = <git@ghislain-rodrigues.fr>
[core]
    editor = vim
[rerere]
    enabled = true
[alias]
    st = status
    co = checkout
    ba = branch -v -a
    slog = log --pretty=oneline
    nlog = log --name-status
    dlog = log -p
    ci = commit -v
    br = branch -v
    history = log --graph --pretty=format:'%Cred%h%Creset %d -%Cblue %s%Creset %Cgreen(%ar) %Cblue<%an>%Creset' --abbrev-commit --date=relative
    svn-rebase = rebase --interactive --preserve-merges refs/remotes/git-svn
    diffc = diff --color-words=.
    diffw = diff --color-words=[a-z]+
    review = "!git log -p --reverse master..$1"
    review-full = "!git diff master..$1"
    show-merge = "!git log -p --reverse $1^..$1"
    show-merge-full = "!git diff $1^..$1"
[color]
    status = auto
    pager = true
    diff = auto
    branch = auto
[push]
    default = current
